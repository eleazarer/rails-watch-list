<div class="container">
  <h1 class="my-4">Add a movie to <%= @list.name %></h1>
  <%= simple_form_for [@list, @bookmark], html: { class: 'mb-4' } do |f| %>
    <div class="form-group">
      <%= f.association :movie, prompt: 'Select a movie', label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= f.input :comment, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
    </div>
    <%= f.submit 'Add movie', class: 'btn btn-primary' %>
  <% end %>
  <%= link_to 'Back', list_path(@list), class: 'btn btn-secondary' %>
</div>
