<div class="container">
  <h1 class="my-4">New List</h1>
  <%= simple_form_for @list, html: { class: 'mb-4' } do |f| %>
    <div class="form-group">
      <%= f.input :name, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
    </div>
    <%= f.submit 'Create List', class: 'btn btn-primary' %>
  <% end %>
  <%= link_to 'Back', lists_path, class: 'btn btn-secondary' %>
</div>
